<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Menu">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/courier_new_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Menu.Buttons">
        <item name="android:layout_width">@dimen/dim_btn_menu</item>
        <item name="android:layout_height">@dimen/dim_btn_menu</item>
        <item name="android:textSize">@dimen/size_btn_menu</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_button_menu</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="Menu.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_tv_menu</item>
    </style>

</resources>