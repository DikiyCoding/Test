<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color_main</item>
        <item name="colorPrimaryDark">@color/theme_color_main</item>
        <item name="colorAccent">@color/theme_color_main</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">@dimen/dim_pb_common</item>
        <item name="android:layout_height">@dimen/dim_pb_common</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.RecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
