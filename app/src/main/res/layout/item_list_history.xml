<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <com.daimajia.swipe.SwipeLayout
            android:id="@+id/layout_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:tag="@string/tg_btm_view">

            <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/margin8dp"
                    android:src="@drawable/ic_delete"
                    android:scaleType="fitCenter"
                    android:background="@null"/>

        </LinearLayout>

        <RelativeLayout
                android:id="@+id/layout_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    android:id="@+id/layout_item"
                    android:layout_width="@dimen/dim_item_history"
                    android:layout_height="@dimen/dim_item_history"
                    android:layout_marginTop="@dimen/margin8dp"
                    android:layout_marginStart="@dimen/margin8dp"
                    android:layout_marginEnd="@dimen/margin8dp"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="10dp">

                <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="@dimen/dim_item_history"
                        android:layout_height="@dimen/dim_item_history"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_tproger_placeholder"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/layout_tag"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="-35dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/layout_item"
                    android:layout_alignStart="@id/layout_item"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@null">

                <TextView
                        android:id="@+id/tv_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:fontFamily="@font/century_gothic_regular"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:includeFontPadding="false"
                        android:background="@drawable/shape_item_search"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>